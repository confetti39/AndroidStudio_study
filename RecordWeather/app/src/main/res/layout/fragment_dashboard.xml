<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.dashboard.DashboardFragment"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/add_title_relative"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/actionBar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:fontFamily="@font/nanum_eb"
            android:textColor="@color/titleText"
            android:text="기록하기" />


        <ImageButton
            android:id="@+id/ib_add_check"
            android:layout_width="30dp"
            android:layout_height="27dp"
            android:background="@drawable/icon_check"
            android:layout_marginRight="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="18dp"
        android:layout_marginLeft="18dp"
        app:layout_constraintTop_toBottomOf="@+id/add_title_relative"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round"
            android:layout_marginTop="20dp"
            android:paddingTop="25dp"
            android:paddingRight="20dp"
            android:paddingBottom="25dp"
            android:paddingLeft="20dp">
            <TableRow
                android:layout_weight="1">
                <TextView
                    android:text="현재시간:"
                    android:fontFamily="@font/nanum_b"
                    android:textSize="14sp"
                    android:textColor="@color/someText"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/tv_add_time"
                    android:fontFamily="@font/nanum_r"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:text="시간"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent" />
            </TableRow>
            <TableRow
                android:layout_weight="1"
                android:layout_marginTop="27dp">
                <TextView
                    android:text="날씨:"
                    android:fontFamily="@font/nanum_b"
                    android:textSize="14sp"
                    android:textColor="@color/someText"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/tv_add_weather"
                    android:fontFamily="@font/nanum_r"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:text="맑음"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"/>
            </TableRow>
            <TableRow
                android:layout_weight="1"
                android:layout_marginTop="27dp">
                <TextView
                    android:text="기온:"
                    android:fontFamily="@font/nanum_b"
                    android:textSize="14sp"
                    android:textColor="@color/someText"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/tv_add_temper"
                    android:fontFamily="@font/nanum_r"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:text="19º"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"/>
            </TableRow>
            <TableRow
                android:layout_weight="1"
                android:layout_marginTop="34dp">
                <TextView
                    android:text="체감온도:"
                    android:fontFamily="@font/nanum_b"
                    android:textSize="14sp"
                    android:textColor="@color/someText"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"/>
                <TextView
                    android:id="@+id/tv_add_sensible"
                    android:fontFamily="@font/nanum_r"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:text="19º"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"/>
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="18dp">
            <TextView
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:text="겉옷"
                android:fontFamily="@font/nanum_b"
                android:textSize="14sp"
                android:textColor="@color/titleText"/>
            <EditText
                android:id="@+id/et_add_outer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/nanum_r"
                android:padding="9dp"
                android:textSize="12sp"
                android:background="@drawable/et_round"
                android:textColor="@color/titleText"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="18dp">
            <TextView
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:text="상의"
                android:fontFamily="@font/nanum_b"
                android:textSize="14sp"
                android:textColor="@color/titleText"/>
            <EditText
                android:id="@+id/et_add_top"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/nanum_r"
                android:padding="9dp"
                android:textSize="12sp"
                android:background="@drawable/et_round"
                android:textColor="@color/titleText"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="18dp">
            <TextView
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:text="하의"
                android:fontFamily="@font/nanum_b"
                android:textSize="14sp"
                android:textColor="@color/titleText"/>
            <EditText
                android:id="@+id/et_add_bottom"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/nanum_r"
                android:padding="9dp"
                android:textSize="12sp"
                android:background="@drawable/et_round"
                android:textColor="@color/titleText"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="18dp">
            <TextView
                android:layout_width="52dp"
                android:layout_height="wrap_content"
                android:text="메모"
                android:fontFamily="@font/nanum_b"
                android:textSize="14sp"
                android:textColor="@color/titleText"/>
            <EditText
                android:id="@+id/et_add_memo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/nanum_r"
                android:padding="9dp"
                android:textSize="12sp"
                android:background="@drawable/et_round"
                android:textColor="@color/titleText"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>