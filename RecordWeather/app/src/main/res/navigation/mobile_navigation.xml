<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home"
    app:itemIconTint="@drawable/menu_selector_color"
    app:itemTextColor="@drawable/menu_selector_color">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.recordweather.ui.home.HomeFragment"
        android:label="Today"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.recordweather.ui.dashboard.DashboardFragment"
        android:label="Record"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.recordweather.ui.notifications.NotificationsFragment"
        android:label="Setting"
        tools:layout="@layout/fragment_notifications" />
</navigation>